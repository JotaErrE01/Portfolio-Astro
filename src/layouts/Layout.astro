---
import type { IFrontmatter } from "interfaces/IFrontmatter";
import { Navbar } from "../components/Navbar";

export interface Props {
	title?: string;
	description?: string;
	image?: string;
	keywords?: string;
}

const posts = await Astro.glob<IFrontmatter>("../pages/posts/_data/*.mdx");
const resources = await Astro.glob<IFrontmatter>("../pages/resources/_data/*.mdx");
const data = [
	...posts.map((post) => ({
		...post.frontmatter,
		slug: `/posts/${post.frontmatter.slug}`,
		image: post.frontmatter.images[0],
	})),
	...resources.map((res) => ({
		...res.frontmatter,
		slug: `/resources/${res.frontmatter.slug}`,
		image: res.frontmatter.images[0],
	})),
]

const { title, description, image, keywords = 'jotaerre' } = Astro.props;

// console.log(Astro.props);
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="author" content="Jonathan Ruiz" />
		<meta name="generator" content={Astro.generator} />
		<meta
		name="description"
		content={description}
		/>
		<meta
		property="og:title"
		content={title}
		/>
		<meta
		property="og:description"
		content={description}
		/>
		<meta
		property="og:image"
		content={image?.replace('webp', 'jpg')}
		/>
		
		<meta property="og:type" content="website" />
		<meta property="og:site_name" content="JotaErrE" />
		<meta name="keywords" content={`${keywords}, dev, react, javascript`}/>
		<!-- Cloudflare Web Analytics -->
		<link rel="canonical" href="https://jotaerre.dev/">
		<link rel="sitemap" href="/sitemap-index.xml">
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<script defer src='https://static.cloudflareinsights.com/beacon.min.js' data-cf-beacon='{"token": "c7a2b5a8129349dc9800b3d6f62e3392"}'></script><!-- End Cloudflare Web Analytics -->
		<title>{title}</title>
	</head>
	<body class="container lg:max-w-[100rem] mx-auto p-4 md:px-5 lg:px-0">
		<div class="md:w-full lg:w-3/4 mx-auto">
			<Navbar client:load data={data} />

			<slot />

			<footer class="mt-16">
				<p class="text-center text-gray-500 text-sm mb-1">
					© {new Date().getFullYear()} - Hecho con ❤️ por
					<a href="/" class="text-blue-500 hover:text-blue-700 hover:underline"
						>JotaErrE</a
					>
				</p>
			</footer>
		</div>
	</body>
</html>
